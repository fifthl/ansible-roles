server {
    listen {{ server_port }};
    server_name localhost;
    root {{ document_root }};

    index index.html index.htm index.php;

    location / {
        try_files $uri $uri/ =404;
    }

    # 处理 PHP 请求
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        # 使用变量指定 socket 路径
        fastcgi_pass unix:{{ php_socket }};
    }
}